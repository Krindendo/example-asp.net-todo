<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExampleAspNetTodo</title>
    <link rel="stylesheet" href="~/lib/flowbite/dist/css/flowbite.min.css" />
    <link rel="stylesheet" href="~/lib/dataTables/dataTables.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/fontawesome.min.css"  />
    <link rel="stylesheet" href="~/lib/fontawesome/css/brands.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/solid.min.css" />
    <link rel="stylesheet" href="~/ExampleAspNetTodo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body class="min-h-screen m-0 grid grid-rows-[auto_1fr_auto]">

    <partial name="_HeaderTop" />
    <partial name="_HeaderBottom" />
    <div class="w-full min-h-full pb-3">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted min-h-10">
        <div class="container">
            &copy; 2025 - ExampleAspNetTodo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/dataTables/dataTables.min.js"></script>
    <script src="~/lib/flowbite/dist/js/flowbite.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
